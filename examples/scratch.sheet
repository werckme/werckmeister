@load "chords/default.chords";
@load "pitchmaps/defaultMidiDrumMap.pitchmap";
@load "lua/mods/swing.lua";
@load "lua/mods/staccato.lua";
@load "lua/voicings/simple.lua";
@load "lua/voicings/guitar.lua";
@load "lua/voicings/voicelead.lua";
@load "lua/mods/guitarStroke.lua";
@load "templates/drums.soca.template";
@load "templates/bass.soca.template";
@load "templates/rhythm.soca.template";
@load "templates/piano.bossanova.template";


device: SC1 midi 2;
device: BC midi 2;

tempo: 120;
instrumentDef: drums   BC 9 0 0;
instrumentDef: bass   BC 0 0 34;
instrumentDef: rhythm2   BC 2 0 21;
instrumentDef: rhythm   BC 3 0 25;
instrumentDef: lead     SC1 3 0 11;
instrumentDef: piano   BC 4 0 0;

instrumentConf: bass   
    voicingStrategy simple range contrabass
    volume 100
;

instrumentConf: piano   
    volume 60
;

instrumentConf: rhythm  
    voicingStrategy guitar range mezzosoprano
    mod guitarStroke value 64
    volume 60
;

instrumentConf: rhythm2  
    mod staccato value 90
    voicingStrategy simple range tenor
    volume 70
;

instrumentConf: drums  
    volume 80
;




[
type: sheet;
{
    /template: 
        drums.soca.normal
        bass.soca.normal
        rhythm.soca.normal
        rhythm2.soca.normal
    /
    Fmaj7 | Fmaj7 | G7 | G7 |
    G-7 | Ges7 | Fmaj7 | Ges7 |
    Fmaj7 | Fmaj7 | G7 | G7 |
    G-7 | Ges7 | 
    Fmaj7 | Fmaj7 | Gesmaj7 | Gesmaj7 |
    /template: 
        drums.soca.bridge
        bass.soca.normal
        rhythm.soca.normal
        rhythm2.soca.bridge
    /

    B7 | B7 | Fis-7 | Fis-7 |
    D7 | D7 | G-7 | G-7 |
    Es7 | Es7 | A-7 | D7b9 |
    G-7 | C7b9 | Fmaj7 | Fmaj7 |
    G7 | G7 | G-7 | Ges7 |
    Fmaj7 | Ges9 |
}   
]
