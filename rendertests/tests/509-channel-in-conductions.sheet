using "./chords/default.chords";
using "./509-channel-in-conductions.conductions";

device: SC1 _isType="midi" _useDevice="FLUID";
instrumentDef: piano      SC1 _ch=0 _pc=0;
instrumentDef: guitar      SC1  _ch=1 _gmInstrument="Acoustic Guitar Nylon";
instrumentDef: vibraphone      SC1  _ch=2 _gmInstrument="Vibraphone";
instrumentDef: epiano      SC1  _ch=3 _gmInstrument="Electric Piano 1";

tempo: 150;

[
{
    -- make sure that, all instruments sends its pc
    /instrument: piano/
    /instrument: guitar/
    /instrument: vibraphone/
    /instrument: epiano/
    r1
}
]

[
instrument: piano;
{

   c, d, e, f, | a, b, c d :(x3)| "chord"@<c e g>1
}
]