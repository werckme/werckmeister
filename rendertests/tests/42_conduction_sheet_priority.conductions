
--Rhythm 1 Synth-------------------------
-- the base velocity
instrument(rhythm) {
    velocity = 60;
}
-- increase the velocity by 40% on the down beats 
instrument(rhythm) onBeat(1.5 2.5 3.5 4.5) {
    velocity += 40%;
}
-- increase the velocity by 40% on every second bar on beat 1
channel(1) nthBar(2) onBeat(1) {
    velocity += 40%;
}
--Rhythm 2 Synth-------------------------
instrument(rhythm2) onBeat(1 2 3 4) {
    velocity += 20%;
}
--Bass Synth-------------------------
instrument(bass) onBeat (1 3) {
    velocity += 30%;
}